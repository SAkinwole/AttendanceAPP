@using AttendanceAPP.Models
@model IEnumerable<AttendanceAPP.Models.AttendanceViewModel>
@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/SHared/_Layout.cshtml";
} 
<h1>Attendance List</h1>
<form class="form-inline my-2 my-lg-0" asp-controller="Attendance" asp-action="Filter" style="padding-right: 25px;">
    <input name="searchString" type="text" class="form-control" placeholder="Search ..." aria-label="Recipient's username" aria-describedby="button-addon2">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i>Search</button>
</form>


